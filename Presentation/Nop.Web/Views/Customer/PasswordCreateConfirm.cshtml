@model PasswordRecoveryConfirmModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}
<div class="page password-recovery-page" >
    <div class="registration-page-title">
        <h1>@T("Account.Register")</h1>
    </div>
    <div class="page-body"   >
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="registration-page-subtitle-password">
                        <strong>@Model.Result</strong>
                    </div>
                </div>
            </div>
        }
        @if (!Model.DisablePasswordChanging)
        {
            <form asp-route="PasswordCreateConfirm" asp-route-token="@Context.Request.Query["token"]" asp-route-email="@Context.Request.Query["email"]" method="post">
                <div asp-validation-summary="ModelOnly" class="message-error"></div>
                <div class="fieldset">
                    <div class="registration-page-subtitle-password">
                        <strong>@T("Account.PasswordCreate")</strong>
                    </div>

                    <div class="form-fields">
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-7">
                                <div class="registration-page-form-label">
                                    <label asp-for="NewPassword" asp-postfix=":"></label>
                                    <nop-required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-7">
                                <i class="nn- nn-eye field-icon-password password" style="position: absolute;top: 31px;z-index: 100;right: 30px;"></i>
                                <div class="inputs">
                                    <input asp-for="NewPassword" />
                                    <span asp-validation-for="NewPassword"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-7">
                                <div class="registration-page-form-label">
                                    <label asp-for="ConfirmNewPassword" asp-postfix=":"></label>
                                    <nop-required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-7">
                                <div class="inputs">
                                    <input asp-for="ConfirmNewPassword" />
                                    <span asp-validation-for="ConfirmNewPassword"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="buttons">
                    <input type="submit" name="set-password" class="button-1 new-password-button" value="@T("Account.Register.Button")" />
                </div>
            </form>
        }
    </div>
</div>