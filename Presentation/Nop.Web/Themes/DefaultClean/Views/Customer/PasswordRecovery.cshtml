@model PasswordRecoveryModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);

    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}

<div class="registration-page-title title-general-version-mobile">
    <h1>@T("Account.PasswordRecovery")</h1>
</div>

<div class="page password-recovery-page">
    <div class="page-body"    >
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="result input-center-title">
                @Model.Result
            </div>
        }
        <form asp-route="PasswordRecovery" method="post">
            <div asp-validation-summary="ModelOnly" class="message-error"></div>
            <p class="tooltip">@T("Account.PasswordRecovery.Tooltip")</p>
            <div class="fieldset inputs-container">
                <div class="form-fields inputs-center">
                    <div class="inputs">
                        <div class="row">
                            <div class="col-lg-12">
                                <label asp-for="Email" asp-postfix=":" class="input-display"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <input asp-for="Email" class="email" maxlength="100" />
                                <br />
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>
                    <div class="inputs input-center">
                        @if (Model.DisplayCaptcha)
                        {
                            <br />
                            <div class="captcha-box">
                                <nop-captcha />
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="buttons" style=" margin-top: 30px !important; ">
                <input type="submit" name="send-email" class="baseButtonRoundedBlue button-1 password-recovery-button" value="@T("Account.PasswordRecovery.RecoverButton")" />
            </div>
        </form>
    </div>
</div>