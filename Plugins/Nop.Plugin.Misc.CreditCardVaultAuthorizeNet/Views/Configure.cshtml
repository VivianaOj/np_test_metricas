@model ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
<form asp-controller="CreditCardVaultAuthorizeNet" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                @T("Plugins.Misc.CreditCardVaultAuthorizeNet")
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Enabled" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Enabled" />
                        <span asp-validation-for="Enabled"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="TransactionKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TransactionKey" />
                        <span asp-validation-for="TransactionKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="LoginId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="LoginId" />
                        <span asp-validation-for="LoginId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CustomerType" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="CustomerType" asp-items="@Model.CustomerTypes" />
                        <span asp-validation-for="CustomerType"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ValidationMode" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="ValidationMode" asp-items="@Model.ValidationModes" />
                        <span asp-validation-for="ValidationMode"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="DefaultCountry" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="DefaultCountry" asp-items="@Model.Countries" />
                        <span asp-validation-for="DefaultCountry"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>